<div class="row post-actions">

  <div class="btn-group pull-left" role="group" aria-label="...">

    <%= link_to post_path(post), method: :delete, 
      data: { confirm: "Are you sure you want to delete this post?" }, 
      class: "btn btn-danger", remote: true do
        %>
      Delete<i class="fa fa-lg umbs-o-up umbs-up fa-remove"></i>
      <% end %>
    <button type="button" class="btn btn-default">Edit
      <i class="fa fa-lg umbs-o-up umbs-up fa-edit"></i>
    </button>
    <% if like = post.liked_by(current_user) %>
      <button id="post-<%= post.id %>-like" type="button" class="btn btn-primary like-button" name="post-<%= post.id %>-<%= like.id %>">
        Like
        <i class="fa fa-lg fa-thumbs-o-up umbs-up"></i>
      </button>
    <% else %>
      <button id="post-<%= post.id %>-like" type="button" class="btn btn-default like-button" name="post-<%= post.id %>-like">
        Like
        <i class="fa fa-lg fa-thumbs-o-up umbs-up"></i>
      </button>
    <% end %>
    <button type="button" class="btn btn-default comment-button" name="post-<%= post.id %>">
      Comment
      <i class="fa fa-comment-o fa-fw fa-lg umbs-o-up umbs-up"></i>
    </button>
  </div>

  <div class="pull-right">
    <small>
      <b id="post-<%= post.id %>-likes-counter"><%= post.likes.count %></b>
      &nbsp Likes
    </small>
    &nbsp&nbsp&nbsp
    <small>
      <b id="post-<%= post.id %>-comments-counter"><%= post.comments.count %></b>
      &nbsp Comments
    </small>
  </div>

</div>

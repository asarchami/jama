<div class="media comment" id="comment-<%= comment.id %>">
  <a class="pull-left comment-user" href="#">
    <%= image_tag "profile.png", size: "40x40", alt: "image", class: "img-responsive media-object" %>
  </a>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.email %></h4>
    <div class="row">
      <div class="comment-body"><%= comment.body %></div>
      <div class="comment-actions">
        <%= link_to ' ',
          comment_path(comment), 
          method: :delete, 
          data: { confirm: "Are you sure you want to delete this comment?" },
          class: "fa -o fa-fw fa-lg text-muted umbs-o-up umbs-up fa-remove",
          remote: true
        %>        
      <a href="#"><i class="fa -o fa-fw fa-lg text-muted umbs-o-up umbs-up fa-edit"></i></a>
      <a href="#"><i class="fa -o fa-fw fa-lg text-muted umbs-o-up umbs-up fa-remove"></i></a>
      <a href="#"><i class="fa fa-fw fa-lg fa-thumbs-o-up text-muted umbs-up"></i></a>
      </div>
    </div>
  </div>
</div>
